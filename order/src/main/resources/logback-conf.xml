<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<!--引用公共日志 -->
	<include resource="logback-conf-base.xml" />
	<!--引用线程池日志 -->
	<include resource="logback-conf-threadpool.xml" />
	<!--引用总结日志，打印API耗时，SQL耗时 -->
	<include resource="logback-conf-summary.xml" />

    <!-- 自定义日志打印，比如调整orm查询数据库的日志级别 -->
    <!-- com.baomidou.mybatisplus.plugins.PerformanceInterceptor会打印sql，所以这里注释掉
	<logger name="com.company.order.mapper" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
		<appender-ref ref="ERROR_FILE" />
	</logger>
	 -->
	
	<!-- 打印SQL性能分析拦截器日志 -->
	<logger name="com.company.order.database.mybatisplus.plugins.PerformanceInterceptor" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
		<appender-ref ref="ERROR_FILE" />
	</logger>
	
	<!-- 打印动态数据源切换日志 -->
	<logger name="com.baomidou.dynamic.datasource" level="DEBUG" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
		<appender-ref ref="ERROR_FILE" />
	</logger>
</configuration>